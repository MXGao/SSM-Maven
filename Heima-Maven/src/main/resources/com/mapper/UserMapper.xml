<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mapper.UserMapper">

    <select id="checkUsername" parameterType="string" resultType="user">
        select * from user where username=#{username}
    </select>

    <insert id="save" parameterType="user">
        insert into user values(#{uid},#{username},#{password},#{name},#{email},#{telephone},#{birthday},#{sex},#{state},#{code})
    </insert>

    <select id="findByCode" parameterType="string" resultType="user">
        select * from user where code=#{code}
    </select>

    <select id="findAll" resultType="user">
        select * from user
    </select>

    <update id="updateState" parameterType="user">
        update user set state=#{state} where uid=#{uid}
    </update>

    <select id="findByUsernameAndPassword" parameterType="user" resultType="user">
        select * from user where username=#{username} and password=#{password}
    </select>

</mapper>